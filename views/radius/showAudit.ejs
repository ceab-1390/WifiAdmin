<div class="card table-responsive">
    <div class="card-header">
        <div>
            <h1 class="text-center">Auditoria</h1>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-responsive">
            <thead>
                <th class="text-center">#</th>
                <th class="text-center">Usuario</th>
                <th class="text-center">Respuesta</th>
                <th class="text-center">Fecha</th>
            </thead>
            <tbody>
                <%show.forEach((item,index) =>{%>
                <tr>
                    <td class="text-center"><%=index + 1%></td>
                    <td class="text-center"><%=item.username%></td>
                    <td class="text-center"><%=item.reply%></td>
                    <td class="text-center"><%=item.authdate%></td>
                </tr>
                <%})%>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">
                        <nav aria-label="Page navigation example" class="text-end">
                            <ul class="pagination">
                                <%if (page > 1){%>
                                    <li class="page-item"><a class="page-link" href="/auditRadius/<%=Number(page) - 1 %>">Anterior</a></li>
                                <%}%>
                                <li class="page-item"><a class="page-link" href="/auditRadius/<%=pages%>" >Ultima pagina: <%=pages%></a></li>
                                <%if (page <= Number(pages) - 1){%>
                                    <li class="page-item"><a class="page-link" href="/auditRadius/<%=Number(page) + 1 %>">Sigueinte</a></li>
                                <%}else{%>
                                    <li class="page-item"><a class="page-link" href="/auditRadius/1%>">Inicio</a></li>
                                <%}%>
                            </ul>
                          </nav>
                    </td>
                    <td class="text-center">
                        <span class="bage bg-light text-primary">Pagina: <%=page%></span>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>